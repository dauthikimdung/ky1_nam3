                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.Moi, "1", new { Checked = "checked", @class = "flat", @disabled = "disabled" }) Mới
                                </label>
