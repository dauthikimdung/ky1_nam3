                            @Html.LabelFor(model => model.MaLinhVuc) :
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-7 col-xs-12">
                            <select class="form-control" name="MaLinhVuc" style="width:50%" readonly="readonly">
                                <option>@Model.MaLinhVuc</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
