                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left"></form>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            @Html.LabelFor(model => model.MaSP) :
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.MaSP, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @style = "width:50%", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
