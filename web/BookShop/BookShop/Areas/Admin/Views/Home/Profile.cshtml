@model BookShop.Models.NguoiDung

@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thông tin tài khoản</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive avatar-view" src="~/Assets/admin/product/images/picture.jpg" alt="Avatar" title="Change the avatar">
                        </div>
                    </div>
                    <h3>@Model.HoTenKH</h3>
                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-map-marker user-profile-icon"></i> @Model.DiaChi
                        </li>
                        <li>
                            <i class="fa fa-briefcase user-profile-icon"></i> Software Engineer
                        </li>
                        <li class="m-top-xs">
                            <i class="fa fa-external-link user-profile-icon"></i>
                            <i target="_blank">@Model.Email</i>
                        </li>
                    </ul>
                    <a class="btn btn-success" href="#"><i class="fa fa-edit m-right-xs"></i>Edit Profile</a>
                    <br />
                    
                </div>
                <div class="col-md-9 col-sm-9 col-xs-12">

                    <!-- end of user-activity-graph -->
                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Thông tin tài khoản</a>
                            </li>
                            <li role="presentation" class="">
                                <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Hoạt động gần đây</a>
                            </li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                                <!-- Start user profile-->
                                <table class="data table table-striped no-margin">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>#</th>
                                            <th>#</th>
                                            @*<th>Client Company</th>
                                                <th class="hidden-phone">Hours Spent</th>
                                                <th>Contribution</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Họ Tên:</td>
                                            <td>@Model.HoTenKH</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Ngày sinh:</td>
                                            <td>@Model.NgaySinh</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>Địa chỉ:</td>
                                            <td>@Model.DiaChi</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>Giới tính:</td>
                                            <td>@Model.GioiTinh</td>
                                        </tr>
                                        <tr>
                                            <td>5</td>
                                            <td>Số điện thoại:</td>
                                            <td>@Model.SoDienThoai</td>
                                        </tr>
                                        <tr>
                                            <td>6</td>
                                            <td>Email:</td>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td>7</td>
                                            <td>Loại tài khoản:</td>
                                            @if (@Model.LoaiTK == 1)
                                            {
                                                <td>Quản trị</td>
                                            }
                                            else
                                            {
                                                <td>Khách hàng</td>
                                            }

                                        </tr>
                                    </tbody>
                                </table>
                                <!-- End user profile-->
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                                <!-- start user projects -->
                                <p>
                                    thêm các công việc thực hiện gần đây!
                                </p>
                                <!-- end user projects -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


