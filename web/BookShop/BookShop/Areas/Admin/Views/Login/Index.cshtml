
@{
    Layout = null;
}
@model BookShop.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Assets/admin/admin_css.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập </title>
    <!-- Bootstrap -->
    <link href="~/Assets/admin/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Assets/admin/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Assets/admin/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Assets/admin/vendors/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Assets/admin/build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/Admin/Login/Login">
                        @*@Html.AntiForgeryToken()
        @Html.ValidationSummary(true, null, new { @class="alert alert-danger" })*@

                        <h1>Đăng nhập</h1>
                        <div>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tài khoản", @required = "" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Mật khẩu" required="" name="Password"/>
                            @*@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @required = "" })*@
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @{
                                if (@ViewBag.message != null)
                                {
                                <div class="alert">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                    <strong>Thông báo! </strong>@ViewBag.message
                                </div>
                                }
                            }
                        </div>
                        <div>
                            <input type="submit" class="btn btn-success col-lg-offset-5" value="Đăng nhập" style="margin-left:125px" />
                            @*<a class="reset_pass" href="#">Quên mật khẩu?</a>*@
                        </div>
                        
                        <div class="clearfix"></div>
                        <div class="separator">
                            @*<p class="change_link">
                                <a href="#signup" class="to_register"> Tạo tài khoản </a>
                            </p>*@
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-book"></i> Book Shop!</h1>
                                @*<p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>*@
                            </div>
                        </div>
                    </form>
                </section>
            </div>
