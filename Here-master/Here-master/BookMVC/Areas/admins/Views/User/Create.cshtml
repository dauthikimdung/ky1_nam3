@model BookMVC.Entities.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admins/Views/Shared/_Layouts.cshtml";
}
@section jsFooter{
<script src="~/assets/admin/dist/js/validate.js"></script>
}
<style>
    label.error {
        color:red !important;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="header-page">Thêm người dùng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="form">
         @using (Html.BeginForm("Create", "User", FormMethod.Post, new { id = "formUser" }))
         {
              @Html.AntiForgeryToken()

              <p class="contact"><label for="name">Họ và tên</label></p>
              <input id="name" name="name" required="" tabindex="1" type="text" autofocus>

              <p class="contact"><label for="email">Email</label></p>
              <input id="email" name="email" placeholder="example@domain.com" required="" type="email" tabindex="2">

              <p class="contact"><label for="usernamename">Tên tài khoản</label></p>
              <input id="username" name="username" required="" tabindex="3" type="text">

              <p class="contact"><label for="password">Mật khẩu</label></p>
              <input type="password" id="password" name="password" required="">

              <p class="contact"><label for="repassword">Nhập lại mật khẩu</label></p>
              <input type="password" id="repassword" name="repassword" required="">

              <p class="contact"><label for="phone">Số điện thoại</label></p>
              <input id="phone" name="phone" required="" type="text"> <br>

              <p class="contact"><label for="repassword">Địa chỉ</label></p>
              <input type="text" id="adress" name="address" required="">

              <p class="contact"><label for="dayofbirth">Ngày sinh</label></p>
              <input type="date" id="dayofbirth" name="dayofbirth" required="">
            <p>
                <input class="buttom" name="submit" id="submit" tabindex="5" value="Đăng ký" type="submit">
            </p>
         }
    </div>

    <div class="btn btn-success" style="color:#337ab7;">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

