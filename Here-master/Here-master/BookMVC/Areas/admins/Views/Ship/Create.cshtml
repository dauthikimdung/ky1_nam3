@model BookMVC.Entities.ShippingType

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admins/Views/Shared/_Layouts.cshtml";
}

@using (Html.BeginForm("Create", "Ship", FormMethod.Post))
{
    @Html.AntiForgeryToken() // Khi co antiforgeryToken thi bat buoc ben Controller, phan Action tuong ung phai co phan xac nhan Token

    <div class="form-horizontal">
        <h4>ShippingType</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.ID)*@ @*khong duoc them cai nay vao*@

        <div class="form-group">
            @Html.LabelFor(model => model.TypeShip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TypeShip, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(model => model.TypeShip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cost, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Time, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

